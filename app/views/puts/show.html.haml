.show-main
  .show-main__logo
    = render 'refrigerator'
  .show-main__title
    詳細ページ
  .show-main__container
    .show-main__container__image
      = image_tag @put.image.url, size: "300x300"
    .show-main__container__data
      .show-main__container__data__category
        = @put.category
      .show-main__container__data__name
        この
        %span.txtred<>
        = @put.category
        は
        %span.txtred<>
        = @put.name
        %span.txtred<>
        です
      .show-main__container__data__count
        残り
        %span.txtred<>
        = @put.count
        %span.txtred<>
        です
      .show-main__container__data__bestby_date
        = @put.bestby_date_y
        %span.txtred<> /
        = @put.bestby_date_m
        %span.txtred<> /
        = @put.bestby_date_d
        までに食べてください
      .show-main__container__data__memo
        = @put.memo
  .show-main__edit
    = submit_tag '変更する', class: "show-main__edit__submit"
  .show-main__destroy
    = submit_tag '削除する' , class: "show-main__destroy__submit"