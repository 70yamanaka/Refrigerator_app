.show-main
  .show-main__logo
    = render 'refrigerator'
  .show-main__title
    詳細ページ
  .show-main__container
    .show-main__container__image
      = image_tag @put.image.url, size: "300x300"
    .show-main__container__data
      .show-main__container__data__category
        ＜ 種類 ＞
        .show-main__container__data__category--content
          = @put.category
      .show-main__container__data__name
        ＜品種＞
        .show-main__container__data__name--content
          = @put.name
      .show-main__container__data__count
        ＜ 残り ＞
        .show-main__container__data__count--content
          = @put.count
      .show-main__container__data__bestby_date
        ＜ 消費期限 ＞
        .show-main__container__data__bestby_date--content
          = @put.bestby_date_y
          %span.txtred<> /
          = @put.bestby_date_m
          %span.txtred<> /
          = @put.bestby_date_d
          までに食べてください
      .show-main__container__data__memo
        ＜ メモ ＞
        .show-main__container__data__memo--content
          = @put.memo
  .show-main__edit
    = submit_tag '変更する', class: "show-main__edit__submit"
  .show-main__destroy
    = link_to "削除する",put_path(@put), method: :delete ,class:"show-main__destroy__submit"